<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MTM_Inventory_Application_Avalonia.ViewModels"
             xmlns:ia="clr-namespace:Projektanker.Icons.Avalonia;assembly=Projektanker.Icons.Avalonia"
             mc:Ignorable="d"
             x:Class="MTM_Inventory_Application_Avalonia.Views.WorkOrderTransactionView"
             x:DataType="vm:WorkOrderTransactionViewModel"
             d:DesignWidth="900" d:DesignHeight="800"
             VerticalAlignment="Top">

  <!-- Global shortcuts for this panel -->
  <UserControl.KeyBindings>
    <KeyBinding Gesture="Ctrl+F"
                Command="{Binding WorkOrder_Button_ResolveIncompletePartIdCommand}" />
  </UserControl.KeyBindings>

  <Design.DataContext>
    <vm:WorkOrderTransactionViewModel />
  </Design.DataContext>

  <!-- Auto rows so the control sizes to content -->
  <Grid Margin="20" RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*">
    <!-- Header with icon -->
    <Grid Grid.Row="0" ColumnDefinitions="Auto,*" VerticalAlignment="Center">
      <Viewbox x:Name="HeaderIconBox" Grid.Column="0" Width="40" Height="40" Stretch="Uniform">
        <ia:Icon Value="mdi:clipboard-list-outline"/>
      </Viewbox>
      <Border Grid.Column="1" Height="{Binding #HeaderIconBox.Height}">
        <TextBlock Margin="12,0,0,0" Text="Work Order Transaction" FontSize="22" FontWeight="SemiBold" VerticalAlignment="Center"/>
      </Border>
    </Grid>

    <!-- Search Panel (collapsible) -->
    <Expander Grid.Row="1" IsExpanded="True" HorizontalAlignment="Stretch">
      <Expander.Header>
        <StackPanel Orientation="Horizontal" Spacing="8">
          <ia:Icon Value="mdi:magnify" Width="18" Height="18"/>
          <TextBlock Text="Search" VerticalAlignment="Center"/>
        </StackPanel>
      </Expander.Header>

      <Border Margin="0,8,0,16" Padding="8" BorderBrush="{DynamicResource ThemeForegroundLowBrush}" BorderThickness="1" CornerRadius="6">
        <!-- Labels | Inputs (+ right-aligned buttons) -->
        <Grid ColumnDefinitions="180,*" RowDefinitions="Auto,Auto,Auto,Auto">
          <Grid.Styles>
            <Style Selector="TextBox">
              <Setter Property="Margin" Value="0,4"/>
              <Setter Property="Padding" Value="8,6"/>
              <Setter Property="MinWidth" Value="260"/>
              <Setter Property="HorizontalAlignment" Value="Stretch"/>
            </Style>
            <Style Selector="TextBlock.header">
              <Setter Property="VerticalAlignment" Value="Center"/>
              <Setter Property="Opacity" Value="0.9"/>
              <Setter Property="Margin" Value="0,8,16,8"/>
            </Style>
            <Style Selector="Button.icon-only">
              <Setter Property="Padding" Value="8"/>
              <Setter Property="HorizontalAlignment" Value="Right"/>
              <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
          </Grid.Styles>

          <!-- Work Order with right-aligned Find button -->
          <TextBlock Classes="header" Grid.Row="0" Grid.Column="0" Text="Work Order"/>
          <Grid Grid.Row="0" Grid.Column="1" ColumnDefinitions="*,Auto">
            <TextBox Grid.Column="0" Text="{Binding WorkOrder_TextBox_WorkOrderId}" />
            <Button Grid.Column="1"
                    Classes="icon-only"
                    Command="{Binding WorkOrder_Button_ResolveIncompletePartIdCommand}"
                    ToolTip.Tip="Find (Ctrl+F)"
                    Margin="8,0,0,0">
              <ia:Icon Value="mdi:magnify" Width="18" Height="18"/>
            </Button>
          </Grid>

          <!-- Quantity -->
          <TextBlock Classes="header" Grid.Row="1" Grid.Column="0" Text="Quantity"/>
          <TextBox   Grid.Row="1" Grid.Column="1" Text="{Binding WorkOrder_TextBox_Quantity}"/>

          <!-- From Location with right-aligned pick button -->
          <TextBlock Classes="header" Grid.Row="2" Grid.Column="0" Text="From Location"/>
          <Grid Grid.Row="2" Grid.Column="1" ColumnDefinitions="*,Auto">
            <TextBox Grid.Column="0" Text="{Binding WorkOrder_TextBox_FromLocation}" />
            <Button Grid.Column="1"
                    Classes="icon-only"
                    Command="{Binding WorkOrder_Button_ShowLocationModalCommand}"
                    CommandParameter="From"
                    ToolTip.Tip="Pick From Location"
                    Margin="8,0,0,0">
              <ia:Icon Value="mdi:map-marker" Width="18" Height="18"/>
            </Button>
          </Grid>

          <!-- To Location with right-aligned pick button -->
          <TextBlock Classes="header" Grid.Row="3" Grid.Column="0" Text="To Location"/>
          <Grid Grid.Row="3" Grid.Column="1" ColumnDefinitions="*,Auto">
            <TextBox Grid.Column="0" Text="{Binding WorkOrder_TextBox_ToLocation}" />
            <Button Grid.Column="1"
                    Classes="icon-only"
                    Command="{Binding WorkOrder_Button_ShowLocationModalCommand}"
                    CommandParameter="To"
                    ToolTip.Tip="Pick To Location"
                    Margin="8,0,0,0">
              <ia:Icon Value="mdi:map-marker" Width="18" Height="18"/>
            </Button>
          </Grid>
        </Grid>
      </Border>
    </Expander>

    <!-- Results Panel (collapsible) -->
    <Expander Grid.Row="2" IsExpanded="False" HorizontalAlignment="Stretch">
      <Expander.Header>
        <StackPanel Orientation="Horizontal" Spacing="8">
          <ia:Icon Value="mdi:view-list" Width="18" Height="18"/>
          <TextBlock Text="Results" VerticalAlignment="Center"/>
          <Border Background="{DynamicResource ThemeAccentBrush}" CornerRadius="10" Padding="6,2" VerticalAlignment="Center">
            <TextBlock Foreground="White"
                       FontWeight="SemiBold"
                       Text="{Binding WorkOrder_DataGrid_Results.Count, FallbackValue=0}"
                       VerticalAlignment="Center"/>
          </Border>
        </StackPanel>
      </Expander.Header>

      <Border Margin="0,8,0,24" Padding="8" BorderBrush="{DynamicResource ThemeForegroundLowBrush}" BorderThickness="1" CornerRadius="6">
        <DataGrid ItemsSource="{Binding WorkOrder_DataGrid_Results}"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  CanUserReorderColumns="True"
                  CanUserSortColumns="True"
                  HeadersVisibility="All"
                  GridLinesVisibility="All"
                  RowHeight="32"
                  MinHeight="120"
                  MaxHeight="320"
                  HorizontalAlignment="Stretch">
          <DataGrid.Columns>
            <DataGridTextColumn Header="Part Number" Binding="{Binding PartNumber}" Width="*" />
            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*" />
            <DataGridTextColumn Header="From" Binding="{Binding FromLocation}" Width="*" />
            <DataGridTextColumn Header="To" Binding="{Binding ToLocation}" Width="*" />
            <DataGridTextColumn Header="Available" Binding="{Binding AvailableQuantity}" Width="Auto" />
            <DataGridTextColumn Header="UOM" Binding="{Binding Uom}" Width="Auto" />
            <DataGridTextColumn Header="Warehouse" Binding="{Binding WarehouseId}" Width="Auto" />
            <DataGridTextColumn Header="Site" Binding="{Binding SiteId}" Width="Auto" />
          </DataGrid.Columns>
        </DataGrid>
      </Border>
    </Expander>

    <!-- Actions -->
    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,12,0,0">
      <Button Command="{Binding WorkOrder_Button_ValidateWorkOrderCommand}">
        <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
          <ia:Icon Value="mdi:playlist-check" Width="18" Height="18"/>
          <TextBlock Text="Validate Work Order" VerticalAlignment="Center"/>
        </StackPanel>
      </Button>
      <Button Command="{Binding WorkOrder_Button_CheckAvailabilityCommand}">
        <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
          <ia:Icon Value="mdi:database-search" Width="18" Height="18"/>
          <TextBlock Text="Check Availability" VerticalAlignment="Center"/>
        </StackPanel>
      </Button>
      <Button Command="{Binding WorkOrder_Button_PostTransactionCommand}">
        <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
          <ia:Icon Value="mdi:send" Width="18" Height="18"/>
          <TextBlock Text="Post" VerticalAlignment="Center"/>
        </StackPanel>
      </Button>
      <Button Command="{Binding WorkOrder_Button_ResetCommand}">
        <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
          <ia:Icon Value="mdi:refresh" Width="18" Height="18"/>
          <TextBlock Text="Reset" VerticalAlignment="Center"/>
        </StackPanel>
      </Button>
    </StackPanel>
  </Grid>
</UserControl>
