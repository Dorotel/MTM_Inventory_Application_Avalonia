<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MTM_Inventory_Application_Avalonia.ViewModels"
             mc:Ignorable="d"
             x:Class="MTM_Inventory_Application_Avalonia.Views.InventoryTransferView"
             x:DataType="vm:InventoryTransferViewModel"
             d:DesignWidth="900" d:DesignHeight="600">
  <Design.DataContext>
    <vm:InventoryTransferViewModel />
  </Design.DataContext>

  <Grid Margin="16" RowDefinitions="Auto,*,Auto" ColumnDefinitions="*">
    <TextBlock Grid.Row="0" Text="Inventory Transfer" FontSize="20" FontWeight="SemiBold"/>

    <Grid Grid.Row="1" ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" Margin="0,12,0,12">
      <TextBlock Grid.Row="0" Grid.Column="0" Text="Item/Part" VerticalAlignment="Center"/>
      <TextBox   Grid.Row="0" Grid.Column="1" Text="{Binding InventoryTransfer_TextBox_ItemId}"/>

      <TextBlock Grid.Row="1" Grid.Column="0" Text="Quantity" VerticalAlignment="Center"/>
      <TextBox   Grid.Row="1" Grid.Column="1" Text="{Binding InventoryTransfer_TextBox_Quantity}"/>

      <TextBlock Grid.Row="2" Grid.Column="0" Text="From Location" VerticalAlignment="Center"/>
      <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Spacing="8">
        <TextBox Text="{Binding InventoryTransfer_TextBox_FromLocation}" Width="220"/>
        <Button Content="Locations (F2)" Command="{Binding InventoryTransfer_Button_ShowLocationModalCommand}"/>
      </StackPanel>

      <TextBlock Grid.Row="3" Grid.Column="0" Text="To Location" VerticalAlignment="Center"/>
      <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Spacing="8">
        <TextBox Text="{Binding InventoryTransfer_TextBox_ToLocation}" Width="220"/>
        <Button Content="Locations (F2)" Command="{Binding InventoryTransfer_Button_ShowLocationModalCommand}"/>
      </StackPanel>

      <TextBlock Grid.Row="4" Grid.Column="0" Text="Warehouse" VerticalAlignment="Center"/>
      <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding InventoryTransfer_Label_WarehouseId}"/>

      <TextBlock Grid.Row="5" Grid.Column="0" Text="Site" VerticalAlignment="Center"/>
      <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding InventoryTransfer_Label_SiteId}"/>
    </Grid>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
      <Button Content="Validate Item" Command="{Binding InventoryTransfer_Button_ValidateItemCommand}"/>
      <Button Content="Check Availability" Command="{Binding InventoryTransfer_Button_CheckAvailabilityFromCommand}"/>
      <Button Content="Post Transfer" Command="{Binding InventoryTransfer_Button_PostTransferCommand}"/>
      <Button Content="Reset" Command="{Binding InventoryTransfer_Button_ResetCommand}"/>
    </StackPanel>
  </Grid>
</UserControl>